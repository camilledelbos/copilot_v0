
  
    <div id="map" style='position: absolute; left: 0px; top: 0px; overflow: hidden; width: 100%; height: 100%; z-index: 0;'></div>
  <%= render 'map_script' %>
 

<div class="row">
  <p id="notice"><%= notice %></p>
  <%= @user_route.first_name %>
  <h1><strong><%= @travel.name %></strong></h1>
</div>

<div class="row">
    <%= link_to 'Edit', edit_travel_route_path(@travel, @route) %> |
    <%= link_to 'Back', travel_routes_path(@travel) %>
</div>


<div class="small-4 large-4 large-offset-8 columns panel">
  <h1><%= @route.route_name %></h1>
  <h4><strong>Departure date</strong></h4>
  <p><%= @route.departure_date %></p>
  <h3><strong>Stages</strong></h3>
   <p> 
    <table>
      <thead>
        <tr>
          <th>Stop off</th>
          <th>Duration</th>
        </tr>
      </thead>
      <tbody id="stage" data-update-url="<%= sort_travel_route_stages_url(@travel, @route) %>">
        <% @stages.each do |s| %>
        <tr>
          <%= content_tag_for :td, s do %>
              <span class="handle">[drag]</span>
              <%= link_to h(s.address), travel_routes_path(@travel) %>
          <% end %>
            <td>
              <%= minimal_form_for @route, url: travel_routes_path(@travel) do |r| %>
                <%= r.error_notification %>
                  <%= r.fields_for :stages do |s| %>
                  <%= s.text_field :duration , placeholder: 'duration', label: 'Duration' %>
                <% end %>
            </td>
            <td>
              <a href="#" class="button round tiny">+</a>
            </td>                    

        </tr>
        <div class="form-actions">
          <%= r.button :submit, value: 'Update' %>
         <% end %>
        </div>
      <% end %>
     </tbody>
  </table>

  <div>
  <div class="small-8 large-8 columns"> 
    <div id="InputsWrapper">
      <div><input type="text" name="mytext[]" id="field_1" value="Text 1"><a href="#" class="removeclass">x</a></div>
    </div>
  </div>
  <div class="small-4 large-4 columns">
    <a href="#" id="AddMoreFileBox" class="button">Add a Stop</a>
  </div>
</div>
</div>


</div>