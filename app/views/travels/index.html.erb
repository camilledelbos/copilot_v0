<div class="row">
  <h1>My travels</h1>
        <div class="button"><%= link_to 'New Travel', new_travel_path %></div>

  <div>
      <% @travels.each_with_index do |travel, i| %>
        <% @bounds = travel.azaz %>
        <% @gon.element = "mini_maps#{i}" %>
        <div>
          <%= travel.name %>
          <div class="mini_maps large-2 columns" id="<%= @gon.element %>" >
            <div><%= render 'mini_map_script' %></div>
          </div>

            <%= link_to 'Show', travel %>
            <%= link_to 'Delete', travel, method: :delete, data: { confirm: 'Are you sure?' } %>
            <ul class="inline-list">
              <li><%= travel.stages.count %><i class="fi-torsos picto" style="font-size: 24px;"></i></li> 
              <li><%= travel.stages.count %><i class="fi-marker" style="font-size: 24px;"></i></li>            
              <li><i class="fi-calendar" style="font-size: 24px;"></i><%= travel.duration %>d</li>
              <li><i class="fi-dollar-bill" style="font-size: 24px;"></i><%# @travel.travel_budget %>â‚¬</li>
              <li><i class="fi-share" style="font-size: 24px;"></i><%#  number_with_delimiter(@travel.distance, locale: :fr) %>km</li>
            </ul>
        </div>
      <% end %>
  </div>
</div>
