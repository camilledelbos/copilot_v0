
<%= minimal_form_for [@travel, @route, @route.stages.build], remote: true do |s| %>
	<%= s.error_notification %>
		<%= s.input :address, placeholder: 'stop-off', :autofocus => true %>
		<%= s.text_field :duration %>
		<%= s.hidden_field :stage_position, value: @route.stages.count + 1 %>
		<%= s.button :submit, value: 'Update'%>

	<% end %>

