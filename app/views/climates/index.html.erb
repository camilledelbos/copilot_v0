<%= flash[:notice] %>
<table>
  <thead>
    <tr>
      <th>couple</th>
      <th>country</th>
      <th>main_city</th>
      <th>month</th>
      <th>sunshine_duration</th>
      <th>t_average_min</th>
      <th>t_average_max</th>
      <th>t_average</th>
      <th>t_best_min</th>
      <th>t_best_max</th>
      <th>precipitation</th>
      <th>rainy_days</th>
      <th>notation</th>
    </tr>
  </thead>
  <tbody>
    <% @climate.each do |climate| %>
      <tr>
        <td><%= climate.couple %></td>
        <td><%= climate.country %></td>
        <td><%= climate.main_city %></td>
        <td><%= climate.month %></td>
        <td><%= climate.sunshine_duration %></td>
        <td><%= climate.t_average_min %></td>
        <td><%= climate.t_average_max %></td>
        <td><%= climate.t_average %></td>
        <td><%= climate.t_best_min %></td>
        <td><%= climate.t_best_max %></td>
        <td><%= climate.precipitation %></td>
        <td><%= climate.rainy_days %></td>
        <td><%= "rr #{climate.notation}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<h3>Import a CSV File</h3>
  <%= form_tag import_climates_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>

