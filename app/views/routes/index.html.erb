<h1>My routes</h1>


<table>
  <thead>
    <tr>
      <th>Route name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.route_name %></td>
        <td><%= link_to 'Show', travel_route_path(route.travel_id, route.id) %></td>
        <td><%= link_to 'Edit', edit_travel_route_path(route.travel_id, route.id) %></td>
        <td><%= link_to 'Destroy', travel_route_path(route.travel_id, route.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>







