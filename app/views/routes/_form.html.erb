<div class="row">
	<div class="small-4 medium-4 large-6 columns">
		<fieldset>
			<%= minimal_form_for @route, url: travel_routes_path(@travel) do |r| %>
			<%= r.error_notification %>
			<legend>Initial data of the itinerary</legend>

			<div class="form-inputs">
				<%= r.input :route_name, :autofocus => true, placeholder: 'Route title'%>

				<%= r.fields_for :stages do |s| %>
					<%= s.text_field :departure_date , :id => "datepicker", placeholder: 'departure date', label: 'Departure date' %>
					<%= s.input :address, placeholder: 'From' %>
				<% end %>
			</div>

			<div class="form-actions">
				<%= r.button :submit, value: 'Create a route' %>
			</div>
			<% end %>
		</fieldset>
	</div>

	<div class="small-8 medium-8 large-6 columns">
		<div id="map" style='width: 700px; height: 300px;'></div>
		<%= render 'mapempty_script' %>
	</div>
</div>