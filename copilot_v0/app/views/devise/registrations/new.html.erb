<h2>Sign up</h2>
<div class="row">
	<div class="small-2 large-4 columns">
	</div>
	<div class="small-4 large-4 columns">
	</div>
	<div class="small-6 large-4 columns">

		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

		<%= devise_error_messages! %>

		<div><%= f.input :first_name, :autofocus => true %><br />

		<div><%= f.input :last_name, :autofocus => true %><br />

		<div><%= f.input :profile_name, :autofocus => true %><br />

		<div><%= f.input :email, :autofocus => true %><br />

		<div><%= f.input :password, :autocomplete => "off"  %><br />

		<div><%= f.input :password_confirmation %><br />

		<div><%= f.submit "Sign up" %></div>
		
		<% end %>

		<%= render "devise/shared/links" %></div>
	</div>

